{
  /* local variables */
  --component-var-1: black;
  --background: orange;
  --content-width: 50%;
}


.class-for-nesting {
  &.content {
    background: var(--background);
    width: calc(var(--content-width) + 100px);
  }
}

.container {
  border: 2px solid gray;
}

.header {
  color: blue;
}

:export {
  componentVar1: var(--component-var-1);
  background1: var(--background);
}
