@import '../themes/default.pcss';

.item {
  &:hover:not(.item--chosen) {
    cursor: pointer;
  }

  &:hover {
    cursor: not-allowed;
  }
}

.default-theme {
  padding: 5px 10px;
  color: var(--color);
  background: var(--background);

  &:hover:not(.item-chosen) {
    color: var(--hover-color);
    background: var(--hover-background);
  }
}

.item--chosen {

}
