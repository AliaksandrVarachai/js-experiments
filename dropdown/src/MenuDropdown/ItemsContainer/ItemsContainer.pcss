@import '../themes/default.pcss';

.items {
  display: none;
  position: absolute;

  &.items--opened {
    display: block;
  }
}

.default-theme {
  max-width: var(--max-menu-width);
  background: var(--background);
  color: var(--color);
  border: 1px solid var(--color);
}

.dark-theme {
  max-width: var(--max-menu-width);
  background: black;
  color: white;
  border: 1px solid white;
}
